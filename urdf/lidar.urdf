<?xml version="1.0"?>
<robot name="xycar"
    xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="lidar">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.1" length="0.07"/> <!-- radius="0.1" (10cm) 는 라이다가 식별 가능한 최소거리임 -->
            </geometry>
        </visual>
    </link>

    <link name="back"/>
    <joint name="lidar_to_back" type="fixed">
        <parent link="lidar"/>
        <child link="back"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="front"/>
    <joint name="lidar_to_front" type="fixed">
        <parent link="lidar"/>
        <child link="front"/>
        <origin xyz="-0.0 0.0 0.0" rpy="0.0 0.0 3.14"/>
    </joint>

    <link name="front_right_60"/>
    <joint name="front_to_front_right_60" type="fixed">
        <parent link="front"/>
        <child link="front_right_60"/>
        <origin xyz="-0.0 0.0 0.0" rpy="0.0 0.0 -1.04"/>
    </joint>

    <link name="right"/>
    <joint name="lidar_to_right" type="fixed">
        <parent link="lidar"/>
        <child link="right"/>
        <origin xyz="0.0 -0.0 0.0" rpy="0.0 0.0 -1.57"/>
    </joint>

    <link name="front_left_60"/>
    <joint name="front_to_front_left_60" type="fixed">
        <parent link="front"/>
        <child link="front_left_60"/>
        <origin xyz="-0.0 0.0 0.0" rpy="0.0 0.0 1.04"/>
    </joint>

    <link name="left"/>
    <joint name="lidar_to_left" type="fixed">
        <parent link="lidar"/>
        <child link="left"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 +1.57"/>
    </joint>
</robot>
